<Window x:Class="CryptoInfoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CryptoInfoApp" Height="550" Width="1000">

    <DockPanel Background="{DynamicResource Backdrop}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Settings">
                <MenuItem Header="Theme">
                    <MenuItem Header="Light" Click="LightThemeClick"/>
                    <MenuItem Header="Dark" Click="DarkThemeClick"/>
                </MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel DockPanel.Dock="Left" Background="LightGray" Width="150">
            <Button Content="Home" Command="{Binding NavigateCommand}" CommandParameter="MainView" Margin="10"/>
            <Button Content="Coins" Command="{Binding NavigateCommand}" CommandParameter="CoinsView" Margin="10"/>
            <Button Content="Convert" Command="{Binding NavigateCommand}" CommandParameter="ConvertView" Margin="10"/>
        </StackPanel>

        <Frame x:Name="MainView" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>